<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.0"
	method="upgrade"
	client="site">
	
	<name>mod_truematrimony</name>
	<creationDate>5 Aug 2014</creationDate>
	<author>Kumar Ramalingam</author>
	<authorEmail>kumar@w3ert.in</authorEmail>
	<copyright>Copyright (c) w3cert.in. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.1.0</version>
	<description>COM_TRUEMATRIMONY_MODULE_DESCRIPTION</description>
	
<files>
	<filename module="mod_truematrimony">mod_truematrimony.php</filename>
	<filename>index.html</filename>    	
	<filename>mod_truematrimony.xml</filename>
	<filename>helper.php</filename>	 
	<folder>tmpl</folder>
	<folder>media</folder> 
</files>
<languages folder="language">
		<language tag="en-GB">en-GB.mod_truematrimony.ini</language>
</languages>
<config>
	<fields name="params" >
	    <fieldset name="request" addfieldpath="administrator/components/com_truematrimony/helpers"> 
			
			<field name="show_profilename" type="radio" label="COM_TRUEMATRIMONY_SHOW_PROFILENAME"
				 class="btn-group" filter="intval"
				size="1" default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
	
		   <field name="show_gender" type="radio" label="COM_TRUEMATRIMONY_SHOW_GENDER"
				 class="btn-group" filter="intval"
				size="1" default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		   </field>
		   
		   <field name="show_dob" type="radio" label="Show DOB"
				 class="btn-group" filter="intval"
				size="1" default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		   </field>
			
		   <field name="show_age" type="radio" label="Show Age"
				 class="btn-group" filter="intval"
				size="1" default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			
			<field name="show_religion" type="radio" label="COM_TRUEMATRIMONY_SHOW_RELIGION"
				 class="btn-group" filter="intval"
				size="1" default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			
			<field name="show_mothertongue" type="radio" label="COM_TRUEMATRIMONY_SHOW_MOTHERTONGUE"
				 class="btn-group" filter="intval"
				size="1" default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			
			<field name="show_caste" type="radio" label="COM_TRUEMATRIMONY_SHOW_CASTE"
				 class="btn-group" filter="intval"
				size="1" default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			
			<field name="show_country" type="radio" label="COM_TRUEMATRIMONY_SHOW_COUNTRY"
				 class="btn-group" filter="intval"
				size="1" default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			
			<field name="show_mobileno" type="radio" label="COM_TRUEMATRIMONY_SHOW_MOBILE_NUMBER"
				 class="btn-group" filter="intval"
				size="1" default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			
			<field name="show_country" type="radio" label="COM_TRUEMATRIMONY_SHOW_COUNTRY"
				 class="btn-group" filter="intval"
				size="1" default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			
			<field name="show_email" type="radio" label="COM_TRUEMATRIMONY_SHOW_EMAIL"
				 class="btn-group" filter="intval"
				size="1" default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>		
			
	 	</fieldset>
	 </fields>
</config>
</extension>
